from pydantic import BaseModel, EmailStr, Field, validator
from typing import Optional, List
from datetime import datetime, date
from uuid import UUID
from enum import Enum

class UserRole(str, Enum):
    EMPLOYEE = "employee"
    DEPUTY_DIRECTOR = "deputy_director"
    TREASURY = "treasury"

class RequestStatus(str, Enum):
    DRAFT = "draft"
    PENDING = "pending"
    APPROVED_FOR_PAYMENT = "approved_for_payment"
    FOR_PAYMENT = "for_payment"
    REJECTED = "rejected"

class ImportType(str, Enum):
    REGULAR = "regular"
    NON_TRANSFERABLE = "non_transferable"
    SCHEDULES = "schedules"
    APPROVED_FOR_PAYMENT = "approved_for_payment"

class Category(str, Enum):
    SUBDIVISIONS = "subdivisions"
    NON_TRANSFERABLE = "non_transferable"
    SCHEDULES = "schedules"
    LIVING_EXPENSES = "living_expenses"

# User schemas
class UserBase(BaseModel):
    username: str = Field(..., min_length=3, max_length=50)
    full_name: str = Field(..., min_length=1, max_length=100)
    email: EmailStr
    role: UserRole
    organization: str = Field(..., max_length=100)
    department: str = Field(..., max_length=100)

class UserCreate(UserBase):
    password: str = Field(..., min_length=8)

class UserLogin(BaseModel):
    username: str
    password: str

class UserResponse(UserBase):
    id: UUID
    is_active: bool
    created_at: datetime
    updated_at: datetime

    class Config:
        from_attributes = True

# Request schemas
class RequestBase(BaseModel):
    article: str = Field(..., max_length=200)
    amount: float = Field(..., gt=0)
    recipient: str = Field(..., max_length=200)
    request_number: str = Field(..., max_length=50)
    request_date: datetime
    organization: str = Field(..., max_length=100)
    department: str = Field(..., max_length=100)
    priority: Optional[int] = Field(None, ge=1, le=5)
    purpose: str
    payment_date: Optional[date]
    applicant: str = Field(..., max_length=100)
    category: Category
    import_type: ImportType = ImportType.REGULAR

class RequestCreate(RequestBase):
    pass

class RequestUpdate(BaseModel):
    status: Optional[RequestStatus] = None
    priority: Optional[int] = Field(None, ge=1, le=5)
    payment_date: Optional[date]

class RequestResponse(RequestBase):
    id: UUID
    status: RequestStatus
    created_by: UUID
    approval_process_id: Optional[UUID]
    created_at: datetime
    updated_at: datetime

    class Config:
        from_attributes = True

# Import schemas
class ImportBase(BaseModel):
    payment_date: date
    comment: Optional[str] = None

class ImportCreate(ImportBase):
    pass

class ImportResponse(ImportBase):
    id: UUID
    user_id: UUID
    file_name: str
    file_size: int
    status: str
    error_message: Optional[str]
    imported_count: int
    skipped_count: int
    created_at: datetime

    class Config:
        from_attributes = True

# Approval process schemas
class ApprovalProcessCreate(BaseModel):
    category: Category
    comment: str
    request_ids: List[UUID]

class ApprovalProcessResponse(BaseModel):
    id: UUID
    deputy_id: UUID
    category: Category
    comment: str
    status: str
    request_ids: List[UUID]
    created_at: datetime
    approved_at: Optional[datetime]

    class Config:
        from_attributes = True

# Token schemas
class Token(BaseModel):
    access_token: str
    token_type: str

class TokenData(BaseModel):
    username: Optional[str] = None
    role: Optional[str] = None

class BulkStatusUpdate(BaseModel):
    """Схема для массового обновления статуса"""
    request_ids: List[UUID]
    status: RequestStatus

class BulkDelete(BaseModel):
    """Схема для массового удаления"""
    request_ids: List[UUID]
